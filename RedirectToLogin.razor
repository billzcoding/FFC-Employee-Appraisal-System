@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.WebUtilities
@using AppraisalAppV1.Components

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    protected override void OnInitialized()
    {
        var currentUri = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        var loginUri = QueryHelpers.AddQueryString("login", "returnUrl", currentUri);
        NavigationManager.NavigateTo(loginUri);
    }
}
